use std::assert;

// ============================================================================
// COMPREHENSIVE TEST SUITE - LOGICAL OPERATIONS (40 tests)
// ============================================================================

@test
fn test_and_tt() {
    assert(true && true, "true && true should be true");
}

@test
fn test_and_tf() {
    assert(!(true && false), "!(true && false) should be true");
}

@test
fn test_and_ft() {
    assert(!(false && true), "!(false && true) should be true");
}

@test
fn test_and_ff() {
    assert(!(false && false), "!(false && false) should be true");
}

@test
fn test_and_expr1() {
    assert(5 < 10 && 10 < 20, "5 < 10 && 10 < 20 should be true");
}

@test
fn test_and_expr2() {
    assert(!(5 > 10 && 10 < 20), "!(5 > 10 && 10 < 20) should be true");
}

@test
fn test_and_three() {
    var a = true;
    var b = true;
    var c = true;
    assert((a && b) && c, "(a && b) && c should be true");
}

@test
fn test_and_three_false() {
    var a = true;
    var b = false;
    var c = true;
    assert(!((a && b) && c), "!((a && b) && c) should be true");
}

@test
fn test_or_tt() {
    assert(true || true, "true || true should be true");
}

@test
fn test_or_tf() {
    assert(true || false, "true || false should be true");
}

@test
fn test_or_ft() {
    assert(false || true, "false || true should be true");
}

@test
fn test_or_ff() {
    assert(!(false || false), "!(false || false) should be true");
}

@test
fn test_or_expr1() {
    assert(5 < 3 || 10 < 20, "5 < 3 || 10 < 20 should be true");
}

@test
fn test_or_expr2() {
    assert(!(5 < 3 || 10 > 20), "!(5 < 3 || 10 > 20) should be true");
}

@test
fn test_or_three() {
    var a = false;
    var b = false;
    var c = true;
    assert((a || b) || c, "(a || b) || c should be true");
}

@test
fn test_or_all_false() {
    assert(!((false || false) || false), "!((false || false) || false) should be true");
}

@test
fn test_not_true() {
    assert(!true == false, "!true == false");
}

@test
fn test_not_false() {
    assert(!false == true, "!false == true");
}

@test
fn test_not_expr1() {
    assert(!(5 > 10), "!(5 > 10) should be true");
}

@test
fn test_not_expr2() {
    assert(!(1 == 2), "!(1 == 2) should be true");
}

@test
fn test_not_double() {
    var a = true;
    var neg_a = !a;
    var double = !neg_a;
    assert(double, "!!true should be true");
}

@test
fn test_not_chain() {
    var a = false;
    var neg = !a;
    assert(neg == true, "!false == true");
}

@test
fn test_complex_and_or() {
    var a = true;
    var b = false;
    var c = true;
    assert((a && b) || c, "(a && b) || c should be true");
}

@test
fn test_complex_or_and() {
    var a = false;
    var b = true;
    var c = false;
    assert((a || b) && c == false, "((a || b) && c) == false");
}

@test
fn test_complex_mixed1() {
    assert((true && true) || (false && false), "(true && true) || (false && false)");
}

@test
fn test_complex_mixed2() {
    assert((true || false) && (false || true), "(true || false) && (false || true)");
}

@test
fn test_complex_range1() {
    var x = 15;
    assert(x > 10 && x < 20, "15 should be between 10 and 20");
}

@test
fn test_complex_range2() {
    var x = 25;
    assert(!(x > 10 && x < 20), "25 should not be between 10 and 20");
}

@test
fn test_complex_three_cond() {
    var a = 5;
    var b = 10;
    var c = 15;
    assert((a < b && b < c) && c > 0, "5 < 10 < 15 && 15 > 0");
}

@test
fn test_complex_negated_or() {
    var x = 5;
    var y = 3;
    assert(!(x < y || y > x), "!(5 < 3 || 3 > 5) should be true");
}

@test
fn test_demorgan_1() {
    var a = true;
    var b = false;
    assert(!(a && b) == (!a || !b), "De Morgan's law 1");
}

@test
fn test_demorgan_2() {
    var a = true;
    var b = true;
    assert(!(a || b) == (!a && !b), "De Morgan's law 2");
}

@test
fn test_xor_equiv() {
    var a = true;
    var b = false;
    assert((a || b) && !(a && b), "XOR equivalence");
}

@test
fn test_implication() {
    var p = true;
    var q = true;
    assert((!p || q) == true, "implication: when q is true, implication is true");
}

@test
fn test_complex_expr1() {
    assert(5 < 10 && 10 < 20 || 30 > 40, "5 < 10 && 10 < 20 || 30 > 40");
}

@test
fn test_complex_expr2() {
    assert((5 < 10) && (10 < 20 || 30 > 40), "(5 < 10) && (10 < 20 || 30 > 40)");
}

@test
fn test_complex_expr3() {
    var a = 5;
    var b = 10;
    assert((a < b && b > a) || (a == b), "(5 < 10 && 10 > 5) || (5 == 5)");
}

@test
fn test_complex_expr4() {
    assert(!(true && false) && (false || true), "!(true && false) && (false || true)");
}

@test
fn test_all_true() {
    assert((true && true) && (true && true), "(true && true) && (true && true)");
}

@test
fn test_any_true() {
    assert((false || false) || (true || false), "(false || false) || (true || false)");
}

