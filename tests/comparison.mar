use std::assert;

@test
fn test_eq_int() {
    assert(10 == 10, "10 == 10 should be true");
}

@test
fn test_neq_int() {
    assert(10 != 20, "10 != 20 should be true");
}

@test
fn test_lt_basic() {
    assert(10 < 20, "10 < 20 should be true");
}

@test
fn test_lt_neg() {
    assert(-20 < -10, "-20 < -10 should be true");
}

@test
fn test_gt_basic() {
    assert(20 > 10, "20 > 10 should be true");
}

@test
fn test_gt_neg() {
    assert(-10 > -20, "-10 > -20 should be true");
}

@test
fn test_le_equal() {
    assert(10 <= 10, "10 <= 10 should be true");
}

@test
fn test_le_less() {
    assert(10 <= 20, "10 <= 20 should be true");
}

@test
fn test_ge_equal() {
    assert(10 >= 10, "10 >= 10 should be true");
}

@test
fn test_ge_greater() {
    assert(20 >= 10, "20 >= 10 should be true");
}

@test
fn test_chain_abc() {
    var a = 5;
    var b = 10;
    var c = 15;
    assert((a < b) && (b < c), "5 < 10 < 15 should be true");
}

@test
fn test_chain_reverse() {
    var a = 15;
    var b = 10;
    var c = 5;
    assert((a > b) && (b > c), "15 > 10 > 5 should be true");
}

@test
fn test_chain_mixed() {
    var a = 5;
    var b = 10;
    var c = 10;
    assert((a < b) && (b == c), "5 < 10 == 10 should be true");
}
