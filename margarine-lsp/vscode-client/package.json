{
	"name": "margarine-lsp",
	"description": "Language server for the Margarine programming language",
	"license": "MIT",
	"version": "0.1.0",
	"categories": [],
	"keywords": [
		"language-server",
		"tower-lsp",
		"margarine"
	],
	"repository": {
		"url": "https://github.com/rookieCookies/margarine"
	},
	"engines": {
		"vscode": "^1.66.0"
	},
	"enabledApiProposals": [],
	"activationEvents": [
		"onLanguage:margarine"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "margarine",
				"extensions": [
					".mar"
				]
			}
		],
		"configuration": {
			"type": "object",
			"title": "margarine-lsp",
			"properties": {
				"editor.experimental.sendChangeNotifications": {
					"type": "boolean",
					"default": true
				},
				"margarine-lsp.trace.server": {
					"type": "string",
					"scope": "window",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"enumDescriptions": [
						"No traces",
						"Error only",
						"Full log"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"postinstall": "cd src && pnpm i",
		"compile": "node esbuild.js --production",
		"check-types": "tsc --noEmit",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "vsce package --no-dependencies"
	},
	"devDependencies": {
		"@types/glob": "8.1.0",
		"@types/mocha": "10.0.10",
		"@types/node": "22.10.2",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"@vscode/vsce": "^3.2.1",
		"cross-env": "^7.0.2",
		"esbuild": "^0.24.2",
		"eslint": "9.17.0",
		"glob": "11.0.0",
		"mocha": "11.0.2",
		"npm-run-all": "^4.1.5",
		"ts-loader": "^9.5.1",
		"typescript": "5.4.5",
		"vscode-test": "^1.4.0",
		"vscode-uri": "^3.0.2"
	},
	"dependencies": {
	},
	"packageManager": "pnpm@8.15.7"
}
